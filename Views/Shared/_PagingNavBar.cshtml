@{ 
    var prevDisabled = !Model.HasPreviousPage ? "disabled='disabled'" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled='disabled'" : "";
}

<ul class="pagination justify-content-center float-right" style="margin:20px 0">
    <li class="page-item px-1">
        <button type="submit" name="page" value="1" @prevDisabled class="btn btn-success">
            <span>|❮</span>
        </button>
    </li>
    <li class="page-item px-1">
        <button type="submit" name="page" @prevDisabled value="@(Model.PageIndex - 1)" class="btn btn-success">
            <span>❮</span>
        </button>
    </li>
    <li class="page-item px-1">
        <span class="btn">
            Side @Model.PageIndex af @Model.TotalPages
        </span>
    </li>
    <li class="page-item px-1">
        <button type="submit" name="page" @nextDisabled value="@(Model.PageIndex + 1)" class="btn btn-success">
            <span>❯</span>
        </button>
    </li>
    <li class="page-item px-1">
        <button type="submit" name="page" @nextDisabled value="@(Model.TotalPages)" class="btn btn-success">
            <span>❯|</span>
        </button>

    </li>
</ul>
<div class="form-group col-md-2">
    @Html.DropDownList("pageSizeID", null, htmlAttributes: new { @class = "form-control", onchange = "submit()" })
</div>