<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AAO_AdminPanel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <script src="https://kit.fontawesome.com/f47fcebf42.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="grid-container">
        <nav class="side-nav">
            <a id="logo" href="/">
                <img src="~/img/AAlogo.svg" />
                <p>Alex Andersen Ølund</p>
            </a>
            <ul>
                <li>
                    <i class="fas fa-edit"></i>
                    <a asp-area="" asp-controller="Home" asp-action="CreateTrip">Opret tur</a>
                    <i class="fas fa-chevron-right"></i>
                </li>
                <li>
                    <i class="fas fa-database"></i>
                    <a asp-area="" asp-controller="Home" asp-action="Index">Afløser oversigt</a>
                    <i class="fas fa-chevron-right"></i>
                </li>
                <li>
                    <i class="fas fa-truck"></i>
                    <a asp-area="" asp-controller="Home" asp-action="Trips">Oprettede ture</a>
                    <i class="fas fa-chevron-right"></i>
                </li>
                <li>
                    <i class="far fa-list-alt"></i>
                    <a href="/">Tildelte Ture</a>
                    <i class="fas fa-chevron-right"></i>
                </li>
            </ul>
            <ul>
            <li>
                <i class="fas fa-arrow-circle-left"></i>
                <a href="/">Minimer menu</a>
                <i class="fas fa-chevron-left"></i>
            </li>
            </ul>

            @*Log out function from LoginPartial*@
            @*<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>*@
        </nav>
    <header>
     
            <partial name="_LoginPartial" />
       
    </header>


    <main>
        @RenderBody()
    </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
