<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AAO_AdminPanel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/formiojs@latest/dist/formio.full.min.css">
    <script src="https://unpkg.com/formiojs@latest/dist/formio.full.min.js"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/css/StyleSheet.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
    <script src="https://kit.fontawesome.com/f47fcebf42.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('.nano-content .sub-menu').find('[href="' + window.location.pathname + '"]').parent().addClass('active')
        });
    </script>
</head>
<body>
    <aside class="sidebar" id="mySidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"> <p> Minimer menu</p><i class="fas fa-times"></i></a>
        <div id="leftside-navigation" class="nano">
            <a>
                <img src="~/img/AAlogo.svg" alt="Alex Andersen Logo" class="logo">
                <p class="logo-title"><b>Alex Andersen Ølund</b></p>
            </a>
            <ul class="">
                <li class="sub-menu">
                    <a asp-controller="Dashboard" asp-action="Index"><i class="fas fa-chalkboard"></i><span>Dashboard</span><i class="arrow fa fa-angle-right pull-right"></i></a>
                </li>
                <li class="sub-menu">
                    <a asp-controller="Trips" asp-action="Create"><i class="fas fa-edit"></i><span>Opret tur</span><i class="arrow fa fa-angle-right pull-right"></i></a>
                </li>
                <li class="sub-menu">
                    <a asp-controller="Drivers" asp-action="Index"><i class="fas fa-database"></i><span>Afløser oversigt</span><i class="arrow fa fa-angle-right pull-right"></i></a>
                </li>
                <li class="sub-menu">
                    <a asp-controller="Trips" asp-action="Index" class="dropdown-btn"><i class="far fa-list-alt"></i>Ture<i class="arrow fa fa-angle-down pull-right"></i>                  </a>
                    <div class="dropdown-container">
                        <a class="under-list" asp-controller="Trips" asp-action="Index" asp-route-StatusID="2">Ikke tildelte ture</a>
                        <a class="under-list" asp-controller="Trips" asp-action="Index" asp-route-StatusID="1">Tildelte ture</a>
                        <a class="under-list" asp-controller="Trips" asp-action="Index" asp-route-StatusID="8">Afsluttede ture</a>
                        <a class="under-list" asp-controller="Trips" asp-action="Index" asp-route-StartLocationID="1">Ture fra Odense</a>
                        <a class="under-list" asp-controller="Trips" asp-action="Index" asp-route-TrafficTypeID="2">Internationale ture</a>
                    </div>
                </li>
            </ul>
        </div>
    </aside>
    <header class="top-nav">
        <div class="sub-menu">
              <a class="openbtn" onclick="openNav()"> @*<p>Åben menu</p>*@ <i class="fas fa-arrow-right"></i></a>
        </div>
        <partial name="_LoginPartial" />
    </header>
    <main id="mainContent">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script defer src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
