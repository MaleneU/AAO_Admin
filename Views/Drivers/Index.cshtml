@model IEnumerable<AAO_AdminPanel.Models.Driver>

@{
    ViewData["Title"] = "Index";
}

<script>
    $('.showmore ').click(function () {
        $(this).closest('.showmore').next('.rowdetail').toggle();

    })

</script>
<style>
    .rowdetail {
        display: none;
    }
</style>

<style>

.driver-info {
    display: grid;
    grid-template-columns: auto auto;
    grid-gap:10%;
    max-width: 80%;
    margin-left: auto;
    margin-right: auto;
    margin-top: 2em;
    margin-bottom: 5em;
}

tr.rowdetail {
    background: #EAEAEA;
}

.availability-table{
    width:100%;
    border-collapse: collapse;
    margin-bottom:1em;
    -webkit-box-shadow: -1px -1px 10px 0px rgba(0,0,0,0.1); 
    box-shadow: -1px -1px 10px 0px rgba(0,0,0,0.1);
}

.availability-table thead tr{
    background-color:#fff;

}


.availability-table tbody tr.available{
    background-color:#B2DDC8;
}

.availability-table tbody tr.unavailable{
    background-color:#F4C0C2;
}
.availability-table tbody tr td{
    border:1px solid #fff;

}

.availability-table tr td:first-child{
            border-left: none;
}

.availability-table tr:first-child th{
            border-top: none;
        }

        .availability-table tr td:last-child, th:last-child{
            border-right: none;
        }
        .availability-table tr:last-child td{
            border-bottom: none;
        }

.availability-table .table-btn{width:0%;}

.availability-controls {
    text-align: right;
}

.info-column p{
    margin:0;
}

.info-grid{
    display:grid;
    grid-template-columns:auto auto;
    width:40%;
}

.driver-controls{
    margin-top:1em;
}

.driver-controls .activity.active:hover i, .driver-controls .activity.inactive i{
    color:yellow;
}

.driver-controls .availability.inactive:hover i, .driver-controls .activity.active i{
    color:#fff;
}

.availability-controls button:hover{
    background-color:#005140;
}

.availability-controls button:last-child{
    margin-left:.5em;
}

</style>



<h1>Afløser oversigt</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@

<form asp-action="Index" method="get">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User.Fullname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DriverLicenses)
                </th>
                <th>               
                </th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {


                <tr class="showmore">

                    <td>
                        @Html.DisplayFor(modelItem => item.User.Fullname)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.User.PhonePretty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Email)
                    </td>
                    <td>
                        @foreach (var l in item.DriverLicenses)
                        {
                            @Html.DisplayFor(modelItem => l.License.LicenseName)
                        }
                    </td>
                    


                    <td>
                        <a class="showmore"> <i class="fas fa-sort-down rotate" data-toggle="tooltip" title="Se chauffør Info"></i> </a>                        
                    </td>
                </tr>

                <tr class="rowdetail">
                    <td colspan="6">
                    <div class="driver-info">
                    <div class="info-column">                        
                        <h4>Chauffør Information</h4>
                        <div class="info-grid">
                        <p><b>@Html.LabelFor(modelItem => item.User.Firstname)</b></p>
                        <p>@Html.DisplayFor(modelItem => item.User.Firstname)</p>
                        <p><b>@Html.LabelFor(modelItem => item.User.Lastname)</b></p>
                        <p>@Html.DisplayFor(modelItem => item.User.Lastname)</p>
                        <p><b>@Html.LabelFor(modelItem => item.User.Email)</b></p>
                        <p>@Html.DisplayFor(modelItem => item.User.Email)</p>
                        <p><b> @Html.LabelFor(modelItem => item.User.Phone)</b></p>
                        <p>@Html.DisplayFor(modelItem => item.User.PhonePretty)</p>
                        <p><b>@Html.LabelFor(modelItem => item.DriverLicenses)</b></p>                        
                        <p>
                            @foreach (var l in item.DriverLicenses)
                            {
                                @Html.DisplayFor(modelItem => l.License.LicenseName)
                            }
                        </p>
                        </div>
                        <div>                            
                            <div class="driver-controls">
                                <button class="activity @(item.Active ? "active" : "inactive") btn btn-secondary" data-toggle="tooltip" title="Aktiv/Inaktiv" data-delay=100 asp-action="DriverActivation" asp-route-id="@item.DriverID"><i class="fas fa-moon"></i></button>
                               @* @if(item.Active == true)
                                    {
                                        <button class="red" asp-action="DriverActivation" asp-route-id="@item.DriverID">Aktiv</button>
                                    }
                                    else if(item.Active == false)
                                    {
                                        <button class="red" asp-action="DriverActivation" asp-route-id="@item.DriverID">Inaktiv</button>
                                    }*@
                                    <button class="btn btn-danger" data-toggle="tooltip" title="Slet" asp-action="Delete" asp-route-id="@item.DriverID"><i class="fas fa-trash"></i></button>
                                </div>
                        </div>
                    </div>
                    <div class="info-column">                        
                        <h4>Rådighed</h4>                            
                        <table class="availability-table">
                            <thead>
                                <tr>
                                    <th>Startdato</th>
                                    <th>Slutdato</th>
                                    <th>Starttid</th>
                                    <th colspan="2"></th>

                                </tr>
                            </thead>
                            <tbody>                                       
                                @foreach (var a in item.Availabilities) { 
                                <tr class="@(a.Status == true ? "available" : "unavailable")">
                                    <td>@Html.DisplayFor(modelItem => a.StartDateString)</td>
                                    <td>@Html.DisplayFor(modelItem => a.EndDateString)</td>
                                    <td>@Html.DisplayFor(modelItem => a.StartTimeString) </td>
                                    <td class="table-btn"><a asp-action="EditAvailability" asp-route-id="@item.DriverID"><i class="fas fa-pen"></i></a></td>
                                    <td class="table-btn"><a asp-action="DeleteAvailability" asp-route-id="@item.DriverID"><i class="fas fa-trash"></i></a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                        <div class="availability-controls">
                            <button class="btn submitBtn" asp-action="AddTripToDriver" asp-route-id="@item.DriverID">Tildel tur</button>
                            <button class="btn submitBtn" asp-action="CreateAvailability" asp-route-id="@item.DriverID">Opret periode</button>                            
                        </div>
                    </div>
                    </div>
                    </td>
                </tr>
                }
            </tbody>
    </table>
            <partial name="_PagingNavBar" />
        </form>

      